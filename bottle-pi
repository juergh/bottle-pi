#!/usr/bin/env python3
#
# A simple REST API server that manages a bunch of Raspberry Pis
#

import argparse
import json
import os
import subprocess
import time
import yaml

import bottle
try:
    import RPi.GPIO as gpio
except ModuleNotFoundError:
    class gpio():
        BOARD = None
        OUT = None
        def setmode(val):  # noqa: E301 / pylint: disable=E0213
            pass
        def setup(pin, val, initial=None):  # noqa: E301 / pylint: disable=E0213
            pass
        def cleanup(pin):  # noqa: E301 / pylint: disable=E0213
            pass

app = bottle.Bottle()

def ssh(name, cmd):
    """
    Run the given command on the provided system
    """
    ssh_cmd = ['ssh',
               '-o', 'ConnectTimeout=2',
               '-o', 'BatchMode=yes',
               '-o', 'StrictHostKeyChecking=no',
               '-o', 'UserKnownHostsFile=/dev/null',
               '-o', 'User=bottle-pi',
               SYSTEMS[name]['hostname']] + cmd
    return subprocess.run(ssh_cmd, capture_output=True, check=False)

def shutdown(name, graceful=False):
    """
    Shut down a system
    """
    if not graceful:
        # Not supported (yet)
        return

    # Poweroff the system via SSH
    resp = ssh(name, ['sudo', 'poweroff'])
    if resp.returncode != 0:
        bottle.abort(400)

    # Wait some time for the system to poweroff and assume success
    time.sleep(10)

def reset(name, graceful=False):
    """
    Reset a system
    """
    shutdown(name, graceful=graceful)

    system = SYSTEMS[name]
    runpin = system['runpin']
    gpio4 = system['gpio4']
    update = system.get('update', False)

    if update:
        # Invoke the installer by driving the gpio4 pin
        gpio.setup(gpio4, gpio.OUT, initial=0)

    # Reset the system
    gpio.setup(runpin, gpio.OUT, initial=0)
    time.sleep(1)
    gpio.cleanup(runpin)

    if update:
        # Keep driving the gpio4 pin for a bit to give the Pi firmware enough
        # time to sample its state
        time.sleep(20)
        gpio.cleanup(gpio4)

    # The update flag is a one-time thing so reset it
    system['update'] = False

# -----------------------------------------------------------------------------
# Redfish API routes

@app.get('/redfish')
def get_redfish():
    return {
        'v1': '/redfish/v1',
    }

@app.get('/redfish/v1')
@app.get('/redfish/v1/')  # Redfishtool wants a trailing slash
def get_redfish_v1():
    return {
        '@odata.id': '/redfish/v1',
        'Images': {
            '@odata.id': '/redfish/v1/Images'
        },
        'Systems': {
            '@odata.id': '/redfish/v1/Systems'
        },
    }

# ----------------------------------------
# Images

@app.get('/redfish/v1/Images')
def get_Images():
    return {
        '@odata.id': '/redfish/v1/Images',
        'Members@odata.count': len(IMAGES),
        'Members': [
            {'@odata.id': '/redfish/v1/Images/' + name} for name in IMAGES
        ],
    }

@app.get('/redfish/v1/Images/<name>')
def get_Images_name(name):
    if name not in IMAGES:
        bottle.abort(404)

    image = IMAGES[name]

    return bottle.static_file(image['filename'], root='/')

# ----------------------------------------
# Systems

@app.get('/redfish/v1/Systems')
def get_Systems():
    return {
        '@odata.id': '/redfish/v1/Systems',
        'Members@odata.count': len(SYSTEMS),
        'Members': [
            {'@odata.id': '/redfish/v1/Systems/' + name} for name in SYSTEMS
        ],
    }

@app.get('/redfish/v1/Systems/<name>')
def get_Systems_name(name):
    if name not in SYSTEMS:
        bottle.abort(404)

    system = SYSTEMS[name]
    return {
        '@odata.id': '/redfish/v1/Systems/' + name,
        'Id': name,
        'SerialNumber': name,
        'Model': system['model'],
        'HostName': system['hostname'],
        'PowerState': 'On',
        'Actions': {
            '#ComputerSystem.Reset': {
                'target': '/redfish/v1/Systems/' + name +
                          '/Actions/ComputerSystem.Reset',
                'ResetType@Redfish.AllowableValues': [
                    'GracefulShutdown',
                    'GracefulRestart',
                    'ForceRestart',
                ],
            },
            '#ComputerSystem.Update': {
                'target': '/redfish/v1/Systems/' + name +
                          '/Actions/ComputerSystem.Update',
            },
        },
    }

@app.post('/redfish/v1/Systems/<name>/Actions/ComputerSystem.Reset')
def post_ComputerSystem_Reset_name(name):
    if name not in SYSTEMS:
        bottle.abort(404)

    data = json.load(bottle.request.body)
    if 'ResetType' not in data:
        bottle.abort(400)

    if data['ResetType'] == 'GracefulShutdown':
        shutdown(name, graceful=True)
    elif data['ResetType'] == 'GracefulRestart':
        reset(name, graceful=True)
    elif data['ResetType'] == 'ForceRestart':
        reset(name, graceful=False)
    else:
        bottle.abort(400)

@app.post('/redfish/v1/Systems/<name>/Actions/ComputerSystem.Update')
def post_ComputerSystem_Update_name(name):
    if name not in SYSTEMS:
        bottle.abort(404)

    SYSTEMS[name]['update'] = True
    reset(name, graceful=False)

# -----------------------------------------------------------------------------
# Main entry point

if __name__ == '__main__':
    parser = argparse.ArgumentParser()
    parser.add_argument('-d', '--debug', action='store_true')
    args = parser.parse_args()

    # Load the config file
    config = None
    for f in ['./bottle-pi.config', '/etc/bottle-pi.config']:
        if os.path.exists(f):
            with open(f) as fh:
                config = yaml.load(fh, Loader=yaml.SafeLoader)
            break
    if config is None:
        raise Exception('Unable to load bottle-pi.config')

    # The list of available systems
    SYSTEMS = config['systems']

    # The list of available images
    IMAGES = {}
    images_pathname = config['images']['pathname']
    for name in os.listdir(images_pathname):
        image_filename = os.path.join(images_pathname, name)
        if os.path.isfile(image_filename):
            IMAGES[name] = {'filename': image_filename}

    # Use board pin numbers
    gpio.setmode(gpio.BOARD)

    # Run the bottle server
    bottle.run(app, host='0.0.0.0', port=config['port'], reloader=args.debug,
               debug=args.debug)
